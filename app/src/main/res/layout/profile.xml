<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".rewardList" >

    <TextView
        android:id="@+id/logoProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#488F49"
        android:drawableLeft="@drawable/ic_back_left"
        android:fontFamily="sans-serif-light"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/addCoverPic"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="#B9F3B9"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_add_a_photo_green_24dp"
        app:layout_constraintTop_toBottomOf="@+id/logoProfile"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="96dp"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <ImageView
        android:id="@+id/profileViewPic"
        android:layout_width="143dp"
        android:layout_height="119dp"
        app:layout_constraintStart_toEndOf="@+id/userName"
        app:srcCompat="@drawable/ic_account_circle_green_24dp"
        app:layout_constraintTop_toBottomOf="@+id/addCoverPic"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="105dp"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:layout_marginTop="50dp"
        android:layout_marginRight="130dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/addCoverPic"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/addCoverPic"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="#488F49"
        android:text="Edit"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>