<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".rewardList" >


    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="500dp"
        app:srcCompat="@drawable/ic_account_circle_green_24dp"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <Button
        android:id="@+id/Retrieveimg"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Retrieve"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/profilePic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="131dp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/Retrieveimg"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/profilePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/profileEmail"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePass"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/creditpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="creditpoint"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/address"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/saveProfile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/address"/>

</androidx.constraintlayout.widget.ConstraintLayout>