<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:id="@+id/attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#488F49"
        android:drawableLeft="@drawable/ic_back_left"
        android:fontFamily="sans-serif-light"
        android:text="Attendance"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp" />

    <EditText
        android:id="@+id/attdText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:hint="Input Attendace Code Here"
        android:inputType="numberDecimal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/attendance"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="#488F49"
        android:text="Attend"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        app:layout_constraintTop_toBottomOf="@+id/attdText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp" />


</androidx.constraintlayout.widget.ConstraintLayout>