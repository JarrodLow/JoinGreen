<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/rewardImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.11"
            android:background="#B9F3B9"
            app:srcCompat="@drawable/ic_add_a_photo_green_24dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/rewardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/rewardImageView"
            android:layout_toRightOf="@+id/rewardImageView"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="22dp"
            android:hint="Name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/rewardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rewardImageView"
            android:layout_toEndOf="@+id/rewardImageView"
            android:layout_below="@+id/rewardName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="Reward Points: "/>

        <TextView
            android:id="@+id/rewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rewardImageView"
            android:layout_toEndOf="@+id/rewardDescription"
            android:layout_below="@+id/rewardName"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:hint="0"/>

        <Button
            android:id="@+id/retrieveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="20dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:text="Claim"
            android:textAlignment="center" />

    </RelativeLayout>
</LinearLayout>
