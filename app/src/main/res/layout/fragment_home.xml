<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="500dp"
        app:srcCompat="@drawable/ic_account_circle_green_24dp"
        tools:ignore="MissingConstraints,VectorDrawableCompat" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/displayName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/changePsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Change Password"
        android:inputType="textPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="630dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/profileEmail"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/displayAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/changePsw"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/creditpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="creditpoint"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/displayAddress"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/saveProfile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/creditpoint"/>

</androidx.constraintlayout.widget.ConstraintLayout>